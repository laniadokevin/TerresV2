@using Terres.Web.Models.OLD

@model AdminViewModel

<div id="view-lotes" class="view">
    <div class="container">
        <div class="formulario-001-all-breakpoints screen">
            <div class="overlap-group">
                <div class="background-variant4 mb-4">
                    <h1 class="title ibmplexserif-semi-bold-peanut-60px">Listado de Lotes:</h1>
                </div>

                <!-- Filtros de búsqueda -->
                <div class="filters mb-4">
                    <form method="get" asp-action="Lotes">
                        <!-- Filtro por nombre, dirección, teléfono o email -->
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="searchText">Buscar:</label>
                                <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Buscar por nombre, dirección, teléfono o email" value="@ViewBag.SearchText" />
                            </div>
                            <!-- Filtro por tipo de lote -->
                            <div class="form-group col-md-3">
                                <label for="tipoLote">Tipo de Lote:</label>
                                <select class="form-control" id="tipoLote" name="tipoLote">
                                    <option value="">Seleccionar Tipo de Lote</option>
                                    @foreach (var tipo in Model.TiposLote)
                                    {
                                        if (tipo.Id == ViewBag.TipoLoteId)
                                        {
                                            <option value="@tipo.Id" selected>@tipo.Nombre</option>
                                        }
                                        else
                                        {
                                            <option value="@tipo.Id">@tipo.Nombre</option>
                                        }
                                        
                                    }
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <button type="submit" class="btn btn-primary" style="margin-top: 32px;">Filtrar</button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Tabla de lotes -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Dirección</th>
                            <th scope="col">Tipo de Lote</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Itera sobre los lotes disponibles -->
                        @foreach (var lote in Model.Lotes)
                        {
                            <tr>
                                <td>@lote.Direccion</td>
                                <td>@(lote.TipoLote?.Nombre ?? "Sin tipo asignado")</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
